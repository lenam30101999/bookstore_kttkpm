<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>com.bookstore.pttkht.controller.servlet.CustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/checkLogin</url-pattern>
        <url-pattern>/insert</url-pattern>
        <url-pattern>/out</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bookServlet</servlet-name>
        <servlet-class>com.bookstore.pttkht.controller.servlet.ItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookServlet</servlet-name>
        <url-pattern>/list</url-pattern>
        <url-pattern>/infobook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.bookstore.pttkht.controller.servlet.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/add</url-pattern>
        <url-pattern>/listCart</url-pattern>
        <url-pattern>/payment</url-pattern>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderSerlvet</servlet-name>
        <servlet-class>com.bookstore.pttkht.controller.servlet.OrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderSerlvet</servlet-name>
        <url-pattern>/getOrder</url-pattern>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

</web-app>